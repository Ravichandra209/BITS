package graphs;

import java.util.LinkedList;

public class GraphAdjacencyList2 {
	
	static class Graph{
		int v ;
		LinkedList<Integer> adjListArray[];
		//constructor of the graph 
		Graph(int v){
			this.v = v;
			//size of array defined as number of vertices 
			adjListArray = new LinkedList[v];
			
			//create a new list for each vertex to store the adjacent nodes  
			for (int i=0;i<v;i++) {
				adjListArray[i] = new LinkedList<>();
			}
		}
	}
	
	//add an edge to an undirected graph 
	static void addEdge(Graph graph,int src,int dest) {
		//add an edge from source to dest 
		graph.adjListArray[src].add(dest);
		//since graph is undirected add an edge from dest to src 
		graph.adjListArray[dest].add(src);
	}
	
	// A utility function to print the adjacency list  
    // representation of graph
}
